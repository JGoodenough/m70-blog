---
layout: base.njk
pagination:
    data: contentfulBlogPosts.items
    size: 1
    alias: post
permalink: "blog/{{ post.fields.datePosted | formatDate }}/{{ post.fields.title | slug }}/"
eleventyComputed:
    title: "{{ post.fields.title }}"
    datePosted: "{{ post.fields.datePosted}}"
    author: "{{ post.fields.author}}"
---
<a href="/blog" class="text-green-800 font-bold mb-16">Back to blog listing</a>

<article>
  <h1 class="text-3xl font-bold mb-2 font-serif">{{title}}
    <h1>

      <p class="text-sm font-semibold font-serif">{{datePosted | formatDate('dddd, MMM DD, YYYY')}}</p>
      <p class="font-serif mb-8">by: {{author}}</p>
      <p class="font-serif">{{post.fields.content | renderContentfulRichText | safe}}

      </article>